[user]
	name = tworker
	email = tworker@pair-machine

[core]
	pager = less -F
	editor = vim

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[color "branch"]
	local = cyan
[color "diff"]
	meta = yellow
	frag = magenta
[color "status"]
	untracked = cyan
        changed = blue bold
        renamed = yellow
        deleted = magenta
        unmerged = red
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        mn = merge --no-commit
        cn = cherry-pick --no-commit
        cr = cherry-pick
        co = checkout
        st = status
        dc = diff --cached
	pend = !sh -c 'git log origin/"$1".."$1"' -
        track = !sh -c 'git co --track -b "$1" origin/"$1"' -
        up = "!f() { git merge origin/`git symbolic-ref HEAD | sed -e 's,^refs/heads/,,'`; }; f"
        fo = fetch origin
